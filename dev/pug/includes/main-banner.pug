mixin banner(img, title, description, clase, boton, autor)
  div(class='main-banner--' + clase + ' main-banner')
    .ed-container
      .ed-item.l-75.to-center
        img(src=img).main-banner__img
        .main-banner__data
          h1= title
          if (description !== '')
            p.subtitle= description
          if (boton)
            a(href="#").button--cta.small.center Modelo de bot√≥n
          if (autor)
            .main-banner__author
              a(href="#")
                img(src="https://ed.team/sites/default/files/styles/thumbnail/public/pictures/2017-11/alexys_0.jpg?itok=MMRiEdrl").main-banner__author-img
              a(href="#")
                .main-banner__author-name Alexys Lozada
